<h1>Get some bad news</h1>

<h2>On your mobile</h2>

<% @countries.each do |country_name| %>
  <hr />
  In <%= country_name %>:<br />
  Send "<%= @payment_details[country_name][:keyword] %>" to short number "<%= @payment_details[country_name][:shortcode] %>"
  <table>
    <tr>
      <% @promotional_texts[country_name].each do |lang, text| %>
        <td><%= raw text.gsub(/\n/, '<br />') %></td>
      <% end %>
    </tr>
  </table>
<% end %>

<hr />

<h2>Just here</h2>

<a id="fmp-button" href="#" rel="<%= Rails.application.secrets.cross_platform_api.service_id %>/<%= @user.id %>">
  <img src="http://fortumo.com/images/fmp/fortumopay_96x47.png" width="96" height="47" alt="Mobile Payments by Fortumo" border="0" />
</a>

<script src="http://fortumo.com/javascripts/fortumopay.js" type="text/javascript"></script>
